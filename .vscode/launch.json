    "version": "0.2.0",
    "configurations": [


        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/compiler-typescript/src/index.ts",
            "preLaunchTask": "npm: build-all - compiler-typescript",
            "outFiles": [
                "${workspaceFolder}/compiler-typescript/dist/**/*.js"
            ],
            "args": ["--format", "text", "--input-string", "Title: My Book\n"]
        }
    ]
}
